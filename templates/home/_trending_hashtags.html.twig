{% if trendingHashtags is not empty %}
    <div class="card shadow-sm rounded-4 border-0 mb-4">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3">Hashtags tendance</h5>
            {% for hashtag in trendingHashtags %}
                <a href="{{ path('app_hashtag_show', {'name': hashtag.name}) }}" class="text-decoration-none">
                    <div class="d-flex justify-content-between align-items-center p-2 rounded-3 hover-bg-light mb-2">
                        <div class="text-primary fw-bold">#{{ hashtag.name }}</div>
                        <div class="badge bg-light text-dark">{{ hashtag.usageCount }}</div>
                    </div>
                </a>
            {% endfor %}
            <div class="text-center mt-3">
                <a href="{{ path('app_hashtags_trending') }}" class="text-decoration-none">
                    Voir tous les hashtags
                </a>
            </div>
        </div>
    </div>
{% endif %} 