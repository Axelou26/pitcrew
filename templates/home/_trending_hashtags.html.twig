{% if trendingHashtags is not empty %}
    <div class="card shadow-sm rounded-3 mb-4">
        <div class="card-body">
            <h5 class="mb-3 fw-bold">Hashtags populaires</h5>
            <div class="d-flex flex-wrap gap-2">
                {% for hashtag in trendingHashtags|slice(0, 10) %}
                    <a href="{{ path('app_hashtag_show', {'name': hashtag.name}) }}" class="text-decoration-none">
                        <div class="d-flex align-items-center gap-2">
                            <div class="text-danger fw-bold">#{{ hashtag.name }}</div>
                            <span class="badge bg-light text-dark">{{ hashtag.usageCount }}</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %} 