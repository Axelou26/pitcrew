{% extends 'base.html.twig' %}

{% block title %}Abonnements - PitCrew{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .test-mode-banner {
            background-color: #ff9800;
            color: white;
            text-align: center;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 4px;
        }
        
        .offline-mode-banner {
            background-color: #673ab7;
            color: white;
            text-align: center;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 4px;
        }
        
        .test-card-info {
            background-color: #f8f9fa;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #ff9800;
        }
        
        .test-card {
            font-family: monospace;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .subscription-header {
            padding: 3rem 0;
            background: linear-gradient(135deg, #e31c25 0%, #9c0e14 100%);
            margin-bottom: 2rem;
            color: white;
            text-align: center;
        }
        
        .subscription-card {
            height: 100%;
            border-radius: 10px;
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .subscription-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
        }
        
        .subscription-card.popular:before {
            content: "Populaire";
            position: absolute;
            top: 10px;
            right: -30px;
            background: #e31c25;
            color: white;
            padding: 0.25rem 2.5rem;
            transform: rotate(45deg);
            font-size: 0.8rem;
            font-weight: bold;
            z-index: 1;
        }
        
        .card-header {
            background: rgba(227, 28, 37, 0.05);
            border-bottom: none;
            text-align: center;
            padding: 1.5rem 1rem;
        }
        
        .price-tag {
            font-size: 2.5rem;
            font-weight: bold;
            color: #e31c25;
            margin-bottom: 0;
        }
        
        .price-period {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .feature-list {
            padding: 1.5rem;
        }
        
        .feature-item {
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
        }
        
        .feature-item i {
            color: #e31c25;
            margin-right: 0.5rem;
        }
        
        .card-footer {
            background: transparent;
            border-top: none;
            text-align: center;
            padding: 1.5rem;
        }
        
        .btn-subscribe {
            background: linear-gradient(135deg, #e31c25 0%, #9c0e14 100%);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .btn-subscribe:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
            color: white;
        }
        
        .btn-subscribe-outline {
            background: transparent;
            border: 2px solid #e31c25;
            color: #e31c25;
            padding: 0.75rem 2rem;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .btn-subscribe-outline:hover {
            background: rgba(227, 28, 37, 0.05);
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
            color: #e31c25;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // En mode hors ligne, pas besoin d'initialiser Stripe
            {% if not is_offline_mode %}
                const stripe = Stripe('{{ stripe_public_key }}');
                
                {% if stripe_public_key starts with 'pk_test_' %}
                    console.log('Stripe en mode test');
                    
                    // Copier les informations de carte de test dans le presse-papier
                    const copyButtons = document.querySelectorAll('.copy-test-card');
                    copyButtons.forEach(button => {
                        button.addEventListener('click', function(e) {
                            e.preventDefault();
                            const testCard = this.getAttribute('data-card');
                            navigator.clipboard.writeText(testCard)
                                .then(() => {
                                    this.textContent = 'Copié !';
                                    setTimeout(() => {
                                        this.textContent = 'Copier';
                                    }, 2000);
                                });
                        });
                    });
                {% endif %}
            {% else %}
                console.log('Stripe en mode hors ligne - paiements simulés');
            {% endif %}
        });
    </script>
{% endblock %}

