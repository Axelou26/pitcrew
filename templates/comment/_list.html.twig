{% for comment in comments %}
    <div class="comment mb-3" id="comment-{{ comment.id }}">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <img src="{{ comment.author.avatarUrl }}" alt="Avatar" class="rounded-circle" width="40">
            </div>
            <div class="flex-grow-1 ms-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">{{ comment.author.fullName }}</h6>
                    <small class="text-muted">{{ comment.createdAt|ago }}</small>
                </div>
                <p class="mb-1">{{ comment.content|nl2br }}</p>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <button class="btn btn-sm btn-link reply-button" data-comment-id="{{ comment.id }}">
                        RÃ©pondre
                    </button>
                {% endif %}

                {% if comment.replies|length > 0 %}
                    <div class="replies ms-4 mt-2">
                        {% for reply in comment.replies %}
                            <div class="reply mb-2" id="comment-{{ reply.id }}">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <img src="{{ reply.author.avatarUrl }}" alt="Avatar" class="rounded-circle" width="30">
                                    </div>
                                    <div class="flex-grow-1 ms-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0 small">{{ reply.author.fullName }}</h6>
                                            <small class="text-muted">{{ reply.createdAt|ago }}</small>
                                        </div>
                                        <p class="mb-0 small">{{ reply.content|nl2br }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% else %}
    <p class="text-muted">Aucun commentaire pour le moment.</p>
{% endfor %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="comment-form mt-4">
        <form id="comment-form" data-post-id="{{ post.id }}">
            <div class="mb-3">
                <textarea class="form-control" name="content" rows="3" placeholder="Ajouter un commentaire..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Publier</button>
        </form>
    </div>
{% endif %} 