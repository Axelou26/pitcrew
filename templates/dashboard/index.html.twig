{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body text-center">
                    {% if app.user.profilePicture %}
                        <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" 
                             alt="{{ app.user.fullName }}"
                             class="rounded-circle mb-3"
                             style="width: 100px; height: 100px; object-fit: cover;">
                    {% else %}
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 100px; height: 100px;">
                            <i class="bi bi-person display-4 text-muted"></i>
                        </div>
                    {% endif %}
                    <h5 class="card-title">{{ app.user.fullName }}</h5>
                    {% if app.user.company %}
                        <p class="card-text text-muted">{{ app.user.company }}</p>
                    {% endif %}
                    <a href="{{ path('app_profile_edit') }}" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i> Modifier le profil
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title h6">Navigation</h5>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_dashboard') }}" class="list-group-item list-group-item-action active">
                            <i class="bi bi-speedometer2 me-2"></i> Tableau de bord
                        </a>
                        <a href="{{ path('app_dashboard_posts') }}" class="list-group-item list-group-item-action">
                            <i class="bi bi-file-text me-2"></i> Mes posts
                        </a>
                        <a href="{{ path('app_message_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-chat-dots me-2"></i> Messages</span>
                            <span class="badge bg-primary rounded-pill">{{ unread_messages|length }}</span>
                        </a>
                        <a href="{{ path('app_favorites_index') }}" class="list-group-item list-group-item-action">
                            <i class="bi bi-star me-2"></i> Mes favoris
                        </a>
                        {% if is_granted('ROLE_RECRUTEUR') %}
                            <a href="{{ path('app_dashboard_offers') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-briefcase me-2"></i> Mes offres
                            </a>
                        {% endif %}
                        <a href="{{ path('app_dashboard_applications') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-send me-2"></i> Candidatures</span>
                            {% if is_granted('ROLE_RECRUTEUR') %}
                                <span class="badge bg-primary rounded-pill">{{ received_applications|length }}</span>
                            {% else %}
                                <span class="badge bg-primary rounded-pill">{{ my_applications|length }}</span>
                            {% endif %}
                        </a>
                        <a href="{{ path('app_interviews_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-camera-video me-2"></i> Entretiens</span>
                            {% if upcoming_interviews is defined and upcoming_interviews|length > 0 %}
                                <span class="badge bg-success rounded-pill">{{ upcoming_interviews|length }}</span>
                            {% endif %}
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Messages non lus -->
            {% if unread_messages is not empty %}
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Messages non lus</h5>
                        <a href="{{ path('app_message_index') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for conversation in unread_messages %}
                            {% set otherParticipant = conversation.getOtherParticipant(app.user) %}
                            <a href="{{ path('app_message_conversation', {'id': conversation.id}) }}" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">{{ otherParticipant.fullName }}</h6>
                                    <small class="text-muted">{{ conversation.lastMessageAt|date('d/m/Y H:i') }}</small>
                                </div>
                                <p class="mb-1">{{ conversation.lastMessage.content }}</p>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Posts récents -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Mes derniers posts</h5>
                    <div>
                        <a href="{{ path('app_post_new') }}" class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-plus-lg me-1"></i> Nouveau post
                        </a>
                        <a href="{{ path('app_dashboard_posts') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                </div>
                {% if recent_posts is empty %}
                    <div class="card-body text-center py-5">
                        <i class="bi bi-file-text display-1 text-muted mb-3"></i>
                        <h6 class="text-muted">Vous n'avez pas encore créé de post</h6>
                        <a href="{{ path('app_post_new') }}" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-lg me-1"></i> Créer un post
                        </a>
                    </div>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for post in recent_posts %}
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">{{ post.title }}</h6>
                                    <small class="text-muted">{{ post.createdAt|date('d/m/Y H:i') }}</small>
                                </div>
                                <p class="mb-1">
                                    {% if post.content|length > 150 %}
                                        {{ post.content|slice(0, 150) }}...
                                    {% else %}
                                        {{ post.content }}
                                    {% endif %}
                                </p>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i> Voir
                                    </a>
                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-secondary">
                                        <i class="bi bi-pencil me-1"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {% if is_granted('ROLE_RECRUTEUR') %}
                <!-- Offres d'emploi -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Mes offres d'emploi</h5>
                        <div>
                            <a href="{{ path('app_job_offer_new') }}" class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-plus-lg me-1"></i> Nouvelle offre
                            </a>
                            <a href="{{ path('app_dashboard_offers') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                        </div>
                    </div>
                    {% if posted_offers is empty %}
                        <div class="card-body text-center py-5">
                            <i class="bi bi-briefcase display-1 text-muted mb-3"></i>
                            <h6 class="text-muted">Vous n'avez pas encore publié d'offre d'emploi</h6>
                            <a href="{{ path('app_job_offer_new') }}" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-lg me-1"></i> Publier une offre
                            </a>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for offer in posted_offers %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ offer.title }}</h6>
                                        <small class="text-muted">{{ offer.createdAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">
                                        <span class="badge bg-primary">{{ offer.contractType }}</span>
                                        <span class="badge bg-secondary">{{ offer.location }}</span>
                                    </p>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_job_offer_show', {'id': offer.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i> Voir
                                        </a>
                                        <a href="{{ path('app_job_offer_edit', {'id': offer.id}) }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil me-1"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Candidatures reçues -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Candidatures reçues</h5>
                        <a href="{{ path('app_dashboard_applications') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                    {% if received_applications is empty %}
                        <div class="card-body text-center py-5">
                            <i class="bi bi-person-lines-fill display-1 text-muted mb-3"></i>
                            <h6 class="text-muted">Aucune candidature reçue pour le moment</h6>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for application in received_applications %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ application.applicant.fullName }}</h6>
                                        <small class="text-muted">{{ application.createdAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">Candidature pour : {{ application.jobOffer.title }}</p>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_job_application_show', {'id': application.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i> Voir
                                        </a>
                                        <a href="{{ path('app_message_start', {'id': application.applicant.id}) }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-chat-dots me-1"></i> Message
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% else %}
                <!-- Mes candidatures -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Mes candidatures</h5>
                        <a href="{{ path('app_dashboard_applications') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                    {% if my_applications is empty %}
                        <div class="card-body text-center py-5">
                            <i class="bi bi-send display-1 text-muted mb-3"></i>
                            <h6 class="text-muted">Vous n'avez pas encore postulé à une offre</h6>
                            <a href="{{ path('app_job_offer_index') }}" class="btn btn-primary mt-3">
                                <i class="bi bi-search me-1"></i> Voir les offres
                            </a>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for application in my_applications %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ application.jobOffer.title }}</h6>
                                        <small class="text-muted">{{ application.createdAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">{{ application.jobOffer.company }}</p>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_job_application_show', {'id': application.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i> Voir
                                        </a>
                                        <a href="{{ path('app_message_start', {'id': application.jobOffer.recruiter.id}) }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-chat-dots me-1"></i> Message
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <!-- Dernières candidatures / Dernières offres publiées -->
            <div class="card mt-4">
                <div class="card-header bg-white">
                    {% if is_granted('ROLE_RECRUTEUR') %}
                        <h5 class="card-title h6 mb-0">Dernières offres publiées</h5>
                    {% else %}
                        <h5 class="card-title h6 mb-0">Vos dernières candidatures</h5>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% if is_granted('ROLE_RECRUTEUR') %}
                            {% for offer in posted_offers %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ offer.title }}</h6>
                                        <small class="text-muted">{{ offer.createdAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">
                                        <span class="badge bg-primary">{{ offer.contractType }}</span>
                                        <span class="badge bg-secondary">{{ offer.location }}</span>
                                    </p>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_job_offer_show', {'id': offer.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i> Voir
                                        </a>
                                        <a href="{{ path('app_job_offer_edit', {'id': offer.id}) }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil me-1"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            {% for application in my_applications %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ application.jobOffer.title }}</h6>
                                        <small class="text-muted">{{ application.createdAt|date('d/m/Y H:i') }}</small>
                                    </div>
                                    <p class="mb-1">{{ application.jobOffer.company }}</p>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_job_application_show', {'id': application.id}) }}" class="btn btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i> Voir
                                        </a>
                                        <a href="{{ path('app_message_start', {'id': application.jobOffer.recruiter.id}) }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-chat-dots me-1"></i> Message
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Statistiques du recruteur -->
            {% if is_granted('ROLE_RECRUTEUR') %}
                <div class="card mt-4">
                    <div class="card-header bg-white">
                        <h5 class="card-title h6 mb-0">Statistiques de recrutement</h5>
                    </div>
                    <div class="card-body">
                        <!-- Add your statistics content here -->
                    </div>
                </div>
            {% endif %}
            
            <!-- Favoris -->
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title h6 mb-0">
                        {% if is_granted('ROLE_RECRUTEUR') %}
                            Candidats favoris
                        {% else %}
                            Offres favorites
                        {% endif %}
                    </h5>
                    <a href="{% if is_granted('ROLE_RECRUTEUR') %}{{ path('app_favorites_recruiter_favorites') }}{% else %}{{ path('app_favorites_index') }}{% endif %}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-star me-1"></i> Voir tous mes favoris
                    </a>
                </div>
                <div class="card-body text-center py-4">
                    <i class="bi bi-star display-1 text-muted mb-3"></i>
                    <h6 class="text-muted">
                        {% if is_granted('ROLE_RECRUTEUR') %}
                            Retrouvez vos candidats favoris
                        {% else %}
                            Retrouvez vos offres d'emploi favorites
                        {% endif %}
                    </h6>
                    <a href="{% if is_granted('ROLE_RECRUTEUR') %}{{ path('app_favorites_recruiter_favorites') }}{% else %}{{ path('app_favorites_index') }}{% endif %}" class="btn btn-primary mt-3">
                        <i class="bi bi-star me-1"></i> Voir mes favoris
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 