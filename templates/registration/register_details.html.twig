{% extends 'base.html.twig' %}

{% block title %}
    {% if userType == 'ROLE_POSTULANT' %}
        Inscription - Chercheur d'emploi
    {% else %}
        Inscription - Recruteur
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-card {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: white;
        }
        
        .register-header {
            padding: 3rem 0;
            background: linear-gradient(135deg, #e31c25 0%, #9c0e14 100%);
            margin-bottom: 2rem;
            color: white;
            text-align: center;
        }
        
        .form-control:focus {
            border-color: rgba(227, 28, 37, 0.5);
            box-shadow: 0 0 0 0.25rem rgba(227, 28, 37, 0.25);
        }
        
        .btn-register {
            background: linear-gradient(135deg, #e31c25 0%, #9c0e14 100%);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .btn-register:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.2);
        }
        
        .btn-back {
            background: #f1f1f1;
            border: none;
            color: #333;
            padding: 0.75rem 2rem;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .btn-back:hover {
            background: #e1e1e1;
        }
        
        .invalid-feedback {
            display: block;
            color: #dc3545;
            margin-top: 0.25rem;
            font-size: 0.875em;
        }
        
        .form-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 2rem;
        }
        
        .form-section h4 {
            color: #e31c25;
            margin-bottom: 1rem;
            font-weight: bold;
        }
        
        .required-field::after {
            content: " *";
            color: #dc3545;
        }
        
        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.875em;
        }
        
        .password-strength.weak { color: #dc3545; }
        .password-strength.medium { color: #ffc107; }
        .password-strength.strong { color: #28a745; }
        
        .form-check-input:checked {
            background-color: #e31c25;
            border-color: #e31c25;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-header">
        <div class="container">
            <h1>
                {% if userType == 'ROLE_POSTULANT' %}
                    Rejoignez PitCrew
                {% else %}
                    Créez votre profil de recruteur
                {% endif %}
            </h1>
            <p class="lead">
                {% if userType == 'ROLE_POSTULANT' %}
                    Complétez vos informations pour accéder aux offres d'emploi en sport automobile
                {% else %}
                    Complétez vos informations pour accéder à notre vivier de talents
                {% endif %}
            </p>
        </div>
    </div>

    <div class="container my-5">
        <div class="register-card">
            {{ form_start(registrationForm) }}
            
            <!-- Informations personnelles -->
            <div class="form-section">
                <h4><i class="fas fa-user me-2"></i>Informations personnelles</h4>
                
                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.firstName) }}
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.lastName) }}
                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.phone) }}
                        {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.phone) }}
                    </div>
                </div>
                
                <div class="mb-4">
                    {{ form_label(registrationForm.city) }}
                    {{ form_widget(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.city) }}
                </div>
            </div>
            
            <!-- Informations spécifiques -->
            {% if userType == 'ROLE_RECRUTEUR' %}
                <div class="form-section">
                    <h4><i class="fas fa-building me-2"></i>Informations entreprise</h4>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            {{ form_label(registrationForm.companyName) }}
                            {{ form_widget(registrationForm.companyName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.companyName) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(registrationForm.jobTitle) }}
                            {{ form_widget(registrationForm.jobTitle, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.jobTitle) }}
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            {{ form_label(registrationForm.sector) }}
                            {{ form_widget(registrationForm.sector, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.sector) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(registrationForm.companySize) }}
                            {{ form_widget(registrationForm.companySize, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.companySize) }}
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            {{ form_label(registrationForm.website) }}
                            {{ form_widget(registrationForm.website, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.website) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.companyDescription) }}
                        {{ form_widget(registrationForm.companyDescription, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.companyDescription) }}
                    </div>
                </div>
            {% endif %}
            
            {% if userType == 'ROLE_POSTULANT' %}
                <div class="form-section">
                    <h4><i class="fas fa-briefcase me-2"></i>Informations professionnelles</h4>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            {{ form_label(registrationForm.jobTitle) }}
                            {{ form_widget(registrationForm.jobTitle, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.jobTitle) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(registrationForm.location) }}
                            {{ form_widget(registrationForm.location, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.location) }}
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            {{ form_label(registrationForm.experienceLevel) }}
                            {{ form_widget(registrationForm.experienceLevel, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.experienceLevel) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(registrationForm.availability) }}
                            {{ form_widget(registrationForm.availability, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.availability) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.technicalSkills) }}
                        {% set technicalSkillsValue = registrationForm.technicalSkills.vars.value is iterable ? registrationForm.technicalSkills.vars.value|join(', ') : registrationForm.technicalSkills.vars.value %}
                        {{ form_widget(registrationForm.technicalSkills, {'attr': {'class': 'form-control', 'rows': 3}, 'value': technicalSkillsValue}) }}
                        {{ form_errors(registrationForm.technicalSkills) }}
                    </div>
                    
                    <div class="mb-4">
                        {{ form_label(registrationForm.description) }}
                        {{ form_widget(registrationForm.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.description) }}
                    </div>
                </div>
            {% endif %}
            
            <!-- Sécurité -->
            <div class="form-section">
                <h4><i class="fas fa-lock me-2"></i>Sécurité</h4>
                
                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                        <div class="password-strength" id="password-strength"></div>
                        <small class="form-text text-muted">
                            <strong>Exigences :</strong> 8+ caractères, minuscule, majuscule, chiffre, caractère spécial (@$!%*?&)
                        </small>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.plainPassword.second) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                </div>
            </div>
            
            <!-- Conditions -->
            <div class="form-section">
                <h4><i class="fas fa-check-circle me-2"></i>Conditions d'utilisation</h4>
                
                <div class="mb-4">
                    <div class="form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                
                <div class="mb-4">
                    <div class="form-check">
                        {{ form_widget(registrationForm.agreeNewsletter, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeNewsletter, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    {{ form_errors(registrationForm.agreeNewsletter) }}
                </div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="{{ path('app_register') }}" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i> Retour
                </a>
                <button type="submit" class="btn btn-register">
                    S'inscrire <i class="fas fa-user-plus ms-2"></i>
                </button>
            </div>
            
            {{ form_end(registrationForm) }}
            
            <div class="mt-4 text-center">
                <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.querySelector('input[name*="[first]"]');
            const strengthIndicator = document.getElementById('password-strength');
            
            if (passwordInput && strengthIndicator) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    let strength = 0;
                    let message = '';
                    
                    if (password.length >= 8) strength++;
                    if (/[a-z]/.test(password)) strength++;
                    if (/[A-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[@$!%*?&]/.test(password)) strength++;
                    
                    switch(strength) {
                        case 0:
                        case 1:
                            message = 'Très faible';
                            strengthIndicator.className = 'password-strength weak';
                            break;
                        case 2:
                            message = 'Faible';
                            strengthIndicator.className = 'password-strength weak';
                            break;
                        case 3:
                            message = 'Moyen';
                            strengthIndicator.className = 'password-strength medium';
                            break;
                        case 4:
                            message = 'Fort';
                            strengthIndicator.className = 'password-strength strong';
                            break;
                        case 5:
                            message = 'Très fort';
                            strengthIndicator.className = 'password-strength strong';
                            break;
                    }
                    
                    strengthIndicator.textContent = message;
                });
            }
        });
    </script>
{% endblock %} 