                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') starts with 'app_dashboard' %}active{% endif %}" href="{{ path('app_dashboard') }}">
                                <i class="bi bi-speedometer2 me-1"></i> Tableau de bord
