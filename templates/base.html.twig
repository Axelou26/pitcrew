                                <div id="notifications-container">
                                    <p class="text-center py-3">Chargement...</p>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-center" href="{{ path('app_notification_index') }}">
                                    Voir toutes les notifications
