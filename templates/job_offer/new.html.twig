{% extends 'base.html.twig' %}

{% block title %}Publier une offre d'emploi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --card-border-radius: 16px;
            --input-border-radius: 10px;
            --transition-speed: 0.3s;
        }
        
        .job-form-container {
            max-width: 1000px;
            margin: 0 auto;
        }
        
        .page-header {
            background: linear-gradient(135deg, var(--primary-color) 20%, var(--secondary-color) 100%);
            padding: 3rem 0;
            margin-bottom: 3rem;
            border-radius: 0 0 30px 30px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
        }
        
        .page-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
            border-radius: 50%;
            z-index: 1;
        }
        
        .page-title {
            font-weight: 800;
            letter-spacing: -0.5px;
        }
        
        .form-card {
            border: none;
            border-radius: var(--card-border-radius);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
            transition: all var(--transition-speed);
            overflow: hidden;
        }
        
        .form-card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .form-section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }
        
        .form-section-title:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -10px;
            height: 4px;
            width: 40px;
            background: var(--primary-color);
            border-radius: 4px;
        }
        
        .form-control, .form-select {
            padding: 0.8rem 1.2rem;
            border-radius: var(--input-border-radius);
            border: 1px solid #e6e6e6;
            font-size: 1rem;
            transition: all var(--transition-speed);
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(var(--primary-color-rgb), 0.15);
        }
        
        .form-control-lg {
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        .form-label {
            font-weight: 600;
            margin-bottom: 0.7rem;
            color: #333;
            font-size: 1rem;
        }
        
        .form-hint {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
            transition: all var(--transition-speed);
        }
        
        .collection-item {
            position: relative;
            padding: 1rem 1.2rem;
            margin-bottom: 0.7rem;
            background-color: white;
            border-radius: var(--input-border-radius);
            border: 1px solid #e6e6e6;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: all var(--transition-speed);
            display: flex;
            align-items: center;
        }
        
        .collection-item:hover {
            border-color: var(--primary-color);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
            transform: translateY(-2px);
        }
        
        .collection-item .remove-item {
            margin-left: auto;
            cursor: pointer;
            opacity: 0.7;
            transition: all var(--transition-speed);
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }
        
        .collection-item .remove-item:hover {
            opacity: 1;
            background-color: rgba(220, 53, 69, 0.2);
            transform: scale(1.1);
        }
        
        .collection-item input {
            flex-grow: 1;
            margin-right: 0.75rem;
        }
        
        .skills-collection {
            background-color: #f9fafc;
            border-radius: var(--input-border-radius);
            transition: all var(--transition-speed);
            min-height: 120px;
            border: 1px dashed #ccd4e0;
        }
        
        .skills-collection:focus-within {
            box-shadow: 0 0 0 4px rgba(var(--primary-color-rgb), 0.1);
            border-color: var(--primary-color);
        }
        
        .btn {
