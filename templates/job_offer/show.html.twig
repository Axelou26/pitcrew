{% extends 'base.html.twig' %}

{% block title %}{{ offer.title }} - {{ offer.recruiter.company }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }
        
        .job-meta {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background-color: rgba(225, 6, 0, 0.1);
            border-radius: 8px;
            margin-right: 0.75rem;
            margin-bottom: 0.75rem;
            color: var(--dark-text);
            font-weight: 500;
        }
        
        .job-meta i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }
        
        .skill-badge {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            background-color: rgba(225, 6, 0, 0.1);
            color: var(--primary-color);
            font-weight: 500;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            display: inline-block;
        }
        
        .job-description {
            line-height: 1.7;
        }
        
        .job-description h1, .job-description h2, .job-description h3 {
            margin-top: 1.5rem;
            margin-bottom: 1rem;
        }
        
        .job-description ul, .job-description ol {
            padding-left: 1.5rem;
            margin-bottom: 1rem;
        }
        
        .job-description p {
            margin-bottom: 1rem;
        }
        
        .company-card {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .company-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        
        .company-header {
            background-color: rgba(240, 179, 35, 0.2);
            padding: 2rem 1rem;
            text-align: center;
        }
        
        .company-logo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
            border: 4px solid white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .apply-sticky {
            position: sticky;
            top: 100px;
        }
        
        .salary-display {
            background-color: white;
            color: var(--primary-color);
            border-radius: 10px;
            padding: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
        .similar-job-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .similar-job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        
        .contract-badge {
            background-color: var(--primary-color);
        }
        
        .actions-card {
            border-top: 4px solid var(--primary-color);
        }

        .similar-offers-section {
            background-color: #f8f9fa;
            padding: 3rem 0;
            border-radius: 15px;
        }

        .similar-offer-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .similar-offer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        .location-badge {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
            background-color: rgba(21, 21, 30, 0.1);
            border-radius: 20px;
            color: var(--dark-text);
        }

        .salary-badge {
            display: inline-block;
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
            background-color: rgba(240, 179, 35, 0.2);
            border-radius: 20px;
            color: #d9a31f;
        }
    </style>
{% endblock %}

{% block body %}
<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb" class="mb-2">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white text-decoration-none">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_job_offer_index') }}" class="text-white text-decoration-none">Offres d'emploi</a></li>
                        <li class="breadcrumb-item active text-white-50" aria-current="page">{{ offer.title }}</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold mb-2">{{ offer.title }}</h1>
                <div class="d-flex align-items-center">
                    {% if offer.logoUrl %}
                        <img src="{{ asset('uploads/logos/' ~ offer.logoUrl) }}" alt="{{ offer.company }}" class="rounded-circle bg-white me-2" width="30" height="30">
                    {% endif %}
                    <span class="me-3">{{ offer.recruiter.company }}</span>
                    {% if offer.isActive %}
                        <span class="badge bg-success">Active</span>
                    {% else %}
                        <span class="badge bg-danger">Inactive</span>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-4 text-md-end">
                {% if offer.salary %}
                    <div class="salary-display">
                        <div class="small text-muted mb-1">Salaire annuel</div>
                        <div class="h3 mb-0">{{ offer.salary|number_format(0, ',', ' ') }} €</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            {% if offer.image %}
            <div class="card shadow-sm mb-4 overflow-hidden">
                <img src="{{ asset('uploads/job_images/' ~ offer.image) }}" alt="{{ offer.title }}" class="card-img-top" style="max-height: 350px; object-fit: cover;">
            </div>
            {% endif %}
            
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                        <div class="d-flex flex-wrap">
                            <div class="job-meta">
                                <i class="bi bi-geo-alt"></i>
                                {{ offer.location }}
                            </div>
                            <div class="job-meta">
                                <i class="bi bi-briefcase"></i>
                                {{ offer.contractType }}
                            </div>
                            {% if offer.isRemote %}
                            <div class="job-meta">
                                <i class="bi bi-house"></i>
                                Télétravail
                            </div>
                            {% endif %}
                            <div class="job-meta">
                                <i class="bi bi-calendar-check"></i>
                                Publié le {{ offer.createdAt|date('d/m/Y') }}
                            </div>
                            {% if offer.expiresAt %}
                                <div class="job-meta">
                                    <i class="bi bi-hourglass-split"></i>
                                    Expire le {{ offer.expiresAt|date('d/m/Y') }}
                                </div>
                            {% endif %}
                        </div>
                        <div>
                            {% if is_granted('ROLE_POSTULANT') %}
                                {% set isFavorite = app.user.hasJobOfferInFavorites(offer) %}
                                <button type="button" 
                                        class="btn btn-outline-{{ isFavorite ? 'danger' : 'secondary' }} me-2 favorite-toggle"
                                        data-url="{{ path('app_favorites_toggle_job_offer', {'id': offer.id}) }}"
                                        title="{{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
                                    <i class="bi bi-star{{ isFavorite ? '-fill' : '' }} me-1"></i>
                                    {{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}
                                </button>
                            {% endif %}
                        </div>
                    </div>

                    {% if offer.requiredSkills is not empty %}
                        <div class="mb-4">
                            <h3 class="h5 mb-3">Compétences requises</h3>
                            <div class="d-flex flex-wrap">
                                {% for skill in offer.requiredSkills %}
                                    <span class="skill-badge">{{ skill }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <div class="mb-4">
                        <h3 class="h5 mb-3">Description du poste</h3>
                        <div class="job-description">
                            {{ offer.description|raw }}
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white p-4 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a href="{{ path('app_job_offer_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Retour aux offres
                            </a>
                        </div>
                        {% if is_granted('ROLE_POSTULANT') %}
                            <a href="{{ path('app_job_application_new', {'id': offer.id}) }}" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i> Postuler à cette offre
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if similarOffers|length > 0 %}
                <div class="similar-offers-section mt-5">
                    <div class="container">
                        <h2 class="h4 mb-4">
                            <i class="bi bi-lightning-charge-fill text-primary me-2"></i>
                            Offres similaires
                        </h2>
                        <div class="row g-4">
                            {% for similarOffer in similarOffers %}
                                <div class="col-md-4">
                                    <div class="card h-100 similar-offer-card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="badge bg-primary">{{ similarOffer.contractType }}</span>
                                                <span class="location-badge">
                                                    <i class="bi bi-geo-alt me-1"></i>
                                                    {{ similarOffer.location }}
                                                </span>
                                            </div>
                                            <h3 class="h5 card-title mb-3">{{ similarOffer.title }}</h3>
                                            <p class="card-text text-muted small mb-3">
                                                {{ similarOffer.description|striptags|slice(0, 100) }}{% if similarOffer.description|length > 100 %}...{% endif %}
                                            </p>
                                            {% if similarOffer.salary %}
                                                <div class="salary-badge mb-3">
                                                    <i class="bi bi-currency-euro me-1"></i>
                                                    {{ similarOffer.salary|number_format(0, ',', ' ') }} €/an
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="card-footer bg-white border-top-0">
                                            <a href="{{ path('app_job_offer_show', {'id': similarOffer.id}) }}" class="btn btn-outline-primary w-100">
                                                <i class="bi bi-eye me-2"></i>Voir l'offre
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="apply-sticky">
                <!-- Company Card -->
                <div class="card company-card mb-4">
                    <div class="company-header">
                        {% if offer.recruiter.profilePicture %}
                            <img src="{{ asset('uploads/profile_pictures/' ~ offer.recruiter.profilePicture) }}" 
                                 alt="Logo {{ offer.recruiter.company }}"
                                 class="company-logo">
                        {% else %}
                            <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center company-logo">
                                <i class="bi bi-building text-primary display-6"></i>
                            </div>
                        {% endif %}
                        <h3 class="h5 mb-0">{{ offer.recruiter.company }}</h3>
                    </div>

                    <div class="card-body p-4">
                        {% if offer.recruiter.bio %}
                            <p class="card-text mb-4">{{ offer.recruiter.bio|nl2br }}</p>
                        {% else %}
                            <p class="card-text text-muted mb-4">Aucune information disponible sur cette entreprise.</p>
                        {% endif %}

                        {% if is_granted('ROLE_POSTULANT') %}
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_job_application_new', {'id': offer.id}) }}" class="btn btn-primary">
                                    <i class="bi bi-send me-2"></i> Postuler
                                </a>
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#contactModal">
                                    <i class="bi bi-chat-dots me-2"></i> Contacter le recruteur
                                </button>
                                <a href="{{ path('app_favorites_toggle_job_offer', {'id': offer.id}) }}" class="btn btn-outline-secondary favorite-toggle" data-url="{{ path('app_favorites_toggle_job_offer', {'id': offer.id}) }}">
                                    <i class="bi {% if is_favorite is defined and is_favorite %}bi-bookmark-fill text-primary{% else %}bi-bookmark{% endif %} me-2"></i> Sauvegarder
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions Card (for recruiter) -->
                {% if is_granted('ROLE_RECRUTEUR') and app.user == offer.recruiter %}
                    <div class="card shadow-sm actions-card">
                        <div class="card-header bg-light">
                            <h4 class="card-title h5 mb-0">Actions</h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-grid gap-3">
                                <a href="{{ path('app_job_offer_edit', {'id': offer.id}) }}" class="btn btn-primary">
                                    <i class="bi bi-pencil me-2"></i> Modifier l'offre
                                </a>
                                <a href="{{ path('app_interviews_for_job', {'id': offer.id}) }}" class="btn btn-info text-white">
                                    <i class="bi bi-camera-video me-2"></i> Gérer les entretiens
                                </a>
                                <form action="{{ path('app_job_offer_delete', {'id': offer.id}) }}" method="post" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash me-2"></i> Supprimer l'offre
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <span class="text-muted">Candidatures reçues</span>
                                </div>
                                <div>
                                    <span class="badge bg-primary rounded-pill">{{ offer.applications|length }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Modal Contact Recruteur -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">Contacter {{ offer.recruiter.fullName }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <form id="contactForm">
                    <div class="mb-3">
                        <label for="contactSubject" class="form-label">Sujet</label>
                        <input type="text" class="form-control" id="contactSubject" value="Concernant votre offre : {{ offer.title }}" required>
                    </div>
                    <div class="mb-3">
                        <label for="contactMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="contactMessage" rows="5" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="sendContactBtn">Envoyer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestionnaire pour les boutons de favoris
            const favoriteToggle = document.querySelector('.favorite-toggle');
            if (favoriteToggle) {
                favoriteToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    const url = this.getAttribute('data-url');
                    const button = this;
                    
                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Mise à jour de l'interface
                            if (data.isFavorite) {
                                button.querySelector('i').className = 'bi bi-bookmark-fill text-primary me-2';
                            } else {
                                button.querySelector('i').className = 'bi bi-bookmark me-2';
                            }
                            // Afficher un message de confirmation
                            alert(data.message);
                        }
                    })
                    .catch(error => console.error('Erreur:', error));
                });
            }
            
            // Gestionnaire pour l'envoi de message au recruteur
            const sendContactBtn = document.getElementById('sendContactBtn');
            if (sendContactBtn) {
                sendContactBtn.addEventListener('click', function() {
                    const subject = document.getElementById('contactSubject').value;
                    const message = document.getElementById('contactMessage').value;
                    
                    if (!subject || !message) {
                        alert('Veuillez remplir tous les champs');
                        return;
                    }
                    
                    // Simulation d'envoi de message (à remplacer par un vrai appel API)
                    alert('Votre message a été envoyé au recruteur.');
                    
                    // Fermer la modale
                    const modal = bootstrap.Modal.getInstance(document.getElementById('contactModal'));
                    modal.hide();
                    
                    // Réinitialiser le formulaire
                    document.getElementById('contactForm').reset();
                });
            }
        });
    </script>
{% endblock %} 