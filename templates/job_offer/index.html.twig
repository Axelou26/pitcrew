            window.addEventListener('scroll', animateOnScroll);
            animateOnScroll(); // D√©clencher une premi√®re fois au chargement
            
            // Gestion des filtres avec r√©ponse instantan√©e
            const form = document.getElementById('search-form');
            const inputs = form.querySelectorAll('input, select');
            
            inputs.forEach(input => {
                input.addEventListener('change', function() {
                    // Pour une meilleure UX, on pourrait ajouter ici un syst√®me d'autosubmit
                    // avec un petit d√©lai et un indicateur de chargement
                });
            });
        });
    </script>
{% endblock %} 