{% extends 'base.html.twig' %}

{% block title %}Modifier l'offre d'emploi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .collection-item {
            position: relative;
            padding-right: 2rem;
            transition: all 0.3s ease;
        }
        .collection-item:hover {
            background-color: rgba(13, 110, 253, 0.05);
            border-radius: 8px;
        }
        .collection-item .remove-item {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            opacity: 0.7;
            transition: all 0.2s ease;
        }
        .collection-item .remove-item:hover {
            opacity: 1;
            color: #dc3545 !important;
        }
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        .form-hint {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
        .ck-editor__editable {
            min-height: 200px;
        }
        .btn-add-skill {
            background-color: #f8f9fa;
            border-color: #0d6efd;
            color: #0d6efd;
            font-weight: 500;
        }
        .btn-add-skill:hover {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: #fff;
        }
        .status-card {
            border-left: 4px solid #17a2b8;
        }
        .badge-active {
            background-color: #198754;
        }
        .badge-inactive {
            background-color: #dc3545;
        }
        .btn-activate {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }
        .btn-deactivate {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
        }
        .file-upload-container {
            position: relative;
            padding: 1.5rem;
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            background-color: #f8f9fa;
            text-align: center;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .file-upload-container:hover {
            border-color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.03);
        }
        .file-input {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }
        .file-preview {
            max-width: 100%;
            max-height: 120px;
            margin-top: 1rem;
            border-radius: 8px;
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_job_offer_index') }}">Offres d'emploi</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_job_offer_show', {'id': offer.id}) }}">{{ offer.title }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Modifier</li>
                </ol>
            </nav>
            
            <div class="d-flex align-items-center mb-4">
                {% if offer.logoUrl %}
                    <div class="me-4">
                        <img src="{{ offer.logoUrl }}" alt="{{ offer.company }}" class="rounded" width="80">
                    </div>
                {% endif %}
                <div>
                    <h1 class="h2 mb-1">Modifier "{{ offer.title }}"</h1>
                    <p class="text-muted mb-0">
                        <i class="fas fa-building me-1"></i> {{ offer.company }} &middot;
                        <i class="fas fa-map-marker-alt me-1"></i> {{ offer.location }}
                        {% if offer.isRemote %}
                            <span class="badge bg-success ms-2">Remote</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-lg">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 mb-0">Informations sur le poste</h2>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.company, 'Nom de l\'entreprise') }}
                            {{ form_widget(form.company, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Mercedes F1 Team'}}) }}
                            {{ form_errors(form.company) }}
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label">Logo de l'entreprise</label>
                                <div class="file-upload-container" id="logoUploadContainer">
                                    <i class="fas fa-building mb-2"></i>
                                    <h6 class="mb-1">Choisir un fichier</h6>
                                    <p class="text-muted small mb-0">Image au format JPEG, PNG ou SVG (max 2 Mo)</p>
                                    <img id="logoPreview" src="{{ offer.logoUrl }}" class="file-preview" style="{{ offer.logoUrl ? 'display: block;' : '' }}">
                                    {{ form_widget(form.logoFile, {'attr': {'class': 'file-input', 'accept': 'image/jpeg,image/png,image/svg+xml'}}) }}
                                </div>
                                {{ form_errors(form.logoFile) }}
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Image de l'offre d'emploi</label>
                                <div class="file-upload-container" id="imageUploadContainer">
                                    <i class="fas fa-image mb-2"></i>
                                    <h6 class="mb-1">Choisir un fichier</h6>
                                    <p class="text-muted small mb-0">Image au format JPEG ou PNG (max 5 Mo)</p>
                                    <img id="imagePreview" src="{{ offer.image }}" class="file-preview" style="{{ offer.image ? 'display: block;' : '' }}">
                                    {{ form_widget(form.imageFile, {'attr': {'class': 'file-input', 'accept': 'image/jpeg,image/png'}}) }}
                                </div>
                                {{ form_errors(form.imageFile) }}
                            </div>
                        </div>

                        <div class="mb-4 form-check form-switch">
                            {{ form_widget(form.isRemote, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isRemote, 'Télétravail possible', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.contactEmail, 'Email de contact') }}
                            {{ form_widget(form.contactEmail, {'attr': {'placeholder': 'Ex: recruteur1@exemple.com'}}) }}
                            {{ form_errors(form.contactEmail) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.title, 'Titre du poste') }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Ingénieur Aérodynamique F1'}}) }}
                            {{ form_errors(form.title) }}
                            <div class="form-hint">Choisissez un titre précis et attractif pour attirer les bons candidats</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                {{ form_label(form.contractType, 'Type de contrat') }}
                                {{ form_widget(form.contractType) }}
                                {{ form_errors(form.contractType) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.location, 'Lieu') }}
                                {{ form_widget(form.location, {'attr': {'placeholder': 'Ex: Paris, France'}}) }}
                                {{ form_errors(form.location) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.description, 'Description du poste') }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                            <div class="form-hint">Décrivez les responsabilités, les qualifications requises et les avantages du poste</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                {{ form_label(form.salary, 'Salaire annuel (€)') }}
                                {{ form_widget(form.salary, {'attr': {'placeholder': 'Ex: 45000'}}) }}
                                {{ form_errors(form.salary) }}
                                <div class="form-hint">Laissez vide si vous préférez ne pas préciser</div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.expiresAt, 'Date d\'expiration') }}
                                {{ form_widget(form.expiresAt) }}
                                {{ form_errors(form.expiresAt) }}
                                <div class="form-hint">Date à laquelle l'offre ne sera plus visible</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                {{ form_label(form.requiredSkills, 'Compétences requises') }}
                                <button type="button" class="btn btn-sm btn-add-skill" id="add-skill">
                                    <i class="fas fa-plus-circle me-1"></i> Ajouter
                                </button>
                            </div>
                            <div class="skills-collection p-3 border rounded bg-light" 
                                 data-prototype="{{ form_widget(form.requiredSkills.vars.prototype)|e('html_attr') }}">
                                {% if form.requiredSkills|length > 0 %}
                                    {% for skill in form.requiredSkills %}
                                        <div class="collection-item mb-2 p-2">
                                            {{ form_widget(skill, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Aérodynamique, CAO, Analyse de données'}}) }}
                                            <span class="remove-item text-danger">
                                                <i class="fas fa-times-circle"></i>
                                            </span>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="text-center text-muted py-3">
                                        <i class="fas fa-lightbulb fa-2x mb-3"></i>
                                        <p>Ajoutez les compétences requises pour ce poste</p>
                                    </div>
                                {% endif %}
                            </div>
                            {{ form_errors(form.requiredSkills) }}
                            <div class="form-hint">Listez les compétences techniques et personnelles nécessaires pour le poste</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_job_offer_show', {'id': offer.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-lg mb-4">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 mb-0">Statut de l'offre</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        {% if offer.isActive %}
                            <span class="badge badge-active p-2"><i class="fas fa-check-circle me-1"></i> Active</span>
                        {% else %}
                            <span class="badge badge-inactive p-2"><i class="fas fa-times-circle me-1"></i> Inactive</span>
                        {% endif %}
                    </div>
                    
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i> Publiée le {{ offer.createdAt|date('d/m/Y') }}
                        </li>
                        {% if offer.expiresAt %}
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-hourglass-end me-2 text-warning"></i> Expire le {{ offer.expiresAt|date('d/m/Y') }}
                        </li>
                        {% endif %}
                    </ul>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_job_offer_show', {'id': offer.id}) }}" class="btn btn-outline-primary">
                            <i class="fas fa-eye me-1"></i> Voir l'offre
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm rounded-lg">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 mb-0">Conseils</h2>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i> Utilisez un titre précis et concis
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i> Détaillez les responsabilités et compétences
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i> Mentionnez les avantages de votre entreprise
                        </li>
                        <li>
                            <i class="fas fa-check-circle text-success me-2"></i> Indiquez une fourchette de salaire si possible
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var collectionHolder = document.querySelector('.skills-collection');
            var addButton = document.querySelector('#add-skill');
            
            // Prévisualisation des fichiers
            function handleFilePreview(input, previewId) {
                input.addEventListener('change', function() {
                    var preview = document.getElementById(previewId);
                    
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                        }
                        
                        reader.readAsDataURL(input.files[0]);
                    }
                });
            }
            
            // Appliquer la prévisualisation de fichiers
            handleFilePreview(document.querySelector('input[type="file"][id$="logoFile"]'), 'logoPreview');
            handleFilePreview(document.querySelector('input[type="file"][id$="imageFile"]'), 'imagePreview');
            
            // Vérifier s'il y a des compétences existantes
            function checkEmptyCollection() {
                if (collectionHolder.children.length === 0 || 
                    (collectionHolder.children.length === 1 && collectionHolder.children[0].classList.contains('text-center'))) {
                    collectionHolder.innerHTML = '';
                }
            }

            // Ajouter une nouvelle compétence
            addButton.addEventListener('click', function() {
                checkEmptyCollection();
                
                var prototype = collectionHolder.dataset.prototype;
                var index = collectionHolder.querySelectorAll('.collection-item').length;
                var newForm = prototype.replace(/__name__/g, index);
                
                var div = document.createElement('div');
                div.classList.add('collection-item', 'mb-2', 'p-2');
                div.innerHTML = newForm + '<span class="remove-item text-danger"><i class="fas fa-times-circle"></i></span>';
                
                // Ajouter des attributs au champ
                var input = div.querySelector('input');
                if (input) {
                    input.classList.add('form-control');
                    input.setAttribute('placeholder', 'Ex: Aérodynamique, CAO, Analyse de données');
                }
                
                collectionHolder.appendChild(div);

                // Ajouter l'événement de suppression au nouveau bouton
                addRemoveButton(div);
                
                // Focus sur le nouveau champ
                div.querySelector('input').focus();
            });

            // Ajouter les événements de suppression aux boutons existants
            document.querySelectorAll('.collection-item').forEach(function(item) {
                addRemoveButton(item);
            });

            function addRemoveButton(item) {
                item.querySelector('.remove-item').addEventListener('click', function() {
                    item.remove();
                    
                    // Vérifier si la collection est vide après suppression
                    if (collectionHolder.querySelectorAll('.collection-item').length === 0) {
                        collectionHolder.innerHTML = `
                            <div class="text-center text-muted py-3">
                                <i class="fas fa-lightbulb fa-2x mb-3"></i>
                                <p>Ajoutez les compétences requises pour ce poste</p>
                            </div>
                        `;
                    }
                });
            }
            
            // Animation des champs de formulaire
            document.querySelectorAll('.form-control, .form-select').forEach(function(field) {
                field.addEventListener('focus', function() {
                    this.closest('.mb-4')?.classList.add('was-validated');
                });
            });
        });
    </script>
{% endblock %} 