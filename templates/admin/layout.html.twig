{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Administration</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_dashboard_' %}active{% endif %}" href="{{ path('admin_dashboard_index') }}">
                            <i class="fas fa-home"></i> Tableau de bord
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Abonnements</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_subscription_' %}active{% endif %}" href="{{ path('admin_subscription_index') }}">
                            <i class="fas fa-tags"></i> Plans d'abonnement
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_recruiter_subscription_' %}active{% endif %}" href="{{ path('admin_recruiter_subscription_index') }}">
                            <i class="fas fa-users-cog"></i> Abonnements recruteurs
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Utilisateurs</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_user_' %}active{% endif %}" href="{{ path('admin_user_index') }}">
                            <i class="fas fa-users"></i> Utilisateurs
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Offres d'emploi</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'admin_job_offer_' %}active{% endif %}" href="{{ path('admin_job_offer_index') }}">
                            <i class="fas fa-briefcase"></i> Offres d'emploi
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Site</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">
                            <i class="fas fa-arrow-left"></i> Retour au site
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                            {% endfor %}

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">{% block content_title %}{% endblock %}</h1>
                {% block page_actions %}{% endblock %}
                        </div>

            {% block content %}{% endblock %}
        </main>
                                                    </div>
                                                </div>
                                            {% endblock %}
