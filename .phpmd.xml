<?xml version="1.0"?>
<ruleset name="PHPMD rule set"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Custom PHPMD ruleset for PitCrew project
    </description>

    <!-- Import all rules from the standard rulesets -->
    <rule ref="rulesets/cleancode.xml">
        <exclude name="BooleanArgumentFlag" />
    </rule>
    <rule ref="rulesets/codesize.xml">
        <exclude name="ExcessivePublicCount" />
        <exclude name="TooManyPublicMethods" />
        <exclude name="ExcessiveClassComplexity" />
        <exclude name="TooManyFields" />
        <exclude name="CouplingBetweenObjects" />
    </rule>
    <rule ref="rulesets/controversial.xml" />
    <rule ref="rulesets/design.xml" />
    <rule ref="rulesets/naming.xml">
        <exclude name="ShortVariable" />
    </rule>

    <!-- Customize the ShortVariable rule -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="exceptions" value="id,qb" />
        </properties>
    </rule>

    <!-- Customize ExcessivePublicCount -->
    <rule ref="rulesets/codesize.xml/ExcessivePublicCount">
        <properties>
            <property name="minimum" value="55" />
        </properties>
    </rule>

    <!-- Customize TooManyPublicMethods -->
    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="20" />
        </properties>
    </rule>

    <!-- Customize ExcessiveClassComplexity -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
        <properties>
            <property name="maximum" value="80" />
        </properties>
    </rule>

    <!-- Customize TooManyFields -->
    <rule ref="rulesets/codesize.xml/TooManyFields">
        <properties>
            <property name="maxfields" value="20" />
        </properties>
    </rule>

    <!-- Customize CouplingBetweenObjects -->
    <rule ref="rulesets/codesize.xml/CouplingBetweenObjects">
        <properties>
            <property name="maximum" value="20" />
        </properties>
    </rule>
</ruleset> 